{
	"name": "vscode-dltdojo3r1",
	"displayName": "DLTDOJO3 Platform",
	"description": "DLTDOJO3 Platform",
	"version": "0.0.11",
	"publisher": "dltdojo",
	"repository": {
		"url": "https://github.com/dltdojo/taichu-crypto.git",
		"type": "git"
	},
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:mainTreeView",
		"onCommand:dltdojo3.helloworld",
		"onCommand:dltdojo3.terminalCat"
	],
	"main": "./out/src/extension",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "dltdojo3-activitybar",
					"title": "DLTDOJO3 道場",
					"icon": "resources/dltdojo3_activitybar.svg"
				}
			]
		},
		"views": {
			"dltdojo3-activitybar": [
				{
					"id": "mainTreeView",
					"name": "課程與練習"
				},
				{
					"id": "blockchainView",
					"name": "區塊鏈與節點"
				},
				{
					"id": "didWalletView",
					"name": "帳戶錢包"
				}
			]
		},
		"languages": [
			{
				"id": "x509cert",
				"extensions": [
					".pem",
					".crt"
				],
				"firstLine": "-----BEGIN CERTIFICATE-----"
			}
		],
		"commands": [
			{
				"command": "dltdojo3.helloworld",
				"title": "DLTDOJO3: Hello World",
				"category": "DLTDOJO3"
			},
			{
				"command": "dltdojo3.terminalCat",
				"title": "DLTDOJO3: Terminal Cat file",
				"category": "DLTDOJO3"
			},
			{
				"command": "dltdojo3.terminalShowCertInfo",
				"title": "DLTDOJO3: Terminal Show Cert Info",
				"category": "DLTDOJO3"
			}
		],
		"menus": {
			"editor/title": [
				
			],
			"explorer/context": [
				{
					"when": "resourceLangId == yaml",
					"command": "dltdojo3.terminalCat",
					"group": "YourGroup@1"
				},
				{
					"when": "resourceLangId == x509cert",
					"command": "dltdojo3.terminalShowCertInfo",
					"group": "YourGroup@1"
				}
			],
			"commandPalette": [
				
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"vsix": "vsce package -o dist/vscode-dltdojo3r1.vsix",
		"compile": "tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"cowsay": "1.3.1"
	},
	"devDependencies": {
		"@types/node": "^7.0.43",
		"@types/vscode": "^1.39.0",
		"tslint": "^5.16.0",
		"typescript": "^3.5.1"
	}
}
